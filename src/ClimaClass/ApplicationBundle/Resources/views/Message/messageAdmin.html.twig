{%extends "ClimaClassApplicationBundle::layout.html.twig"%}
{% block content %}
	<div class="repport col-xs-12">
	{{form_start(form)}}
		<div class="row">
			<div class="col-xs-12 green">
				<div class="col-xs-1">
					<img src="{{asset('bundles/climaclassapplication/images/theme/Pen_on_square_of_paper_interface_symbol_32.png')}}" width="32px" height="32px">
				</div>
				<div class="form-group has-success col-xs-11">
					<div class="row">
						<div class="col-xs-8">
							{{form_widget(form.subject, {"attr" : {"class" : "form-control", "placeholder" : "Subject"}})}}
						</div>
						<div class="col-xs-4">
						{%if app.user is null%}
							{{form_widget(form.mail, {"attr" : {"class" : "form-control", "placeholder" : "Subject"}})}}
						{%endif%}
						</div>
					</div>						  
				</div>
			</div>


			<div class="col-xs-12">
				<div class="row">
					{{form_widget(form.body, {"attr" : {"class" : "form-control", "rows" : "15", "placeholder" : "Message"}})}}
				</div>
			</div>
			<div class="col-xs-12" style="margin-bottom: 15px;">
				<div class="row">
					{{form_widget(form.Send, {"attr" : {"class" : "buttong save col-xs-12"}})}}
				</div>
			</div>
		</div>
		{{form_end(form, {'render_rest': false}) }}
	</div>
{% endblock %}
{% block javascripts %}
    {{parent()}}
    {%if app.user is null%}
        <script>
            $(document).ready(function () {
                $('#form_mail').prop('required', true);
            });
        </script>
    {%endif%}
{% endblock %}